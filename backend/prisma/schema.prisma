generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  hf_id        String      @unique
  access_token String
  refresh_token String
  repositories Repository[]
}

model Repository {
  id          String @id @default(uuid())
  name        String
  description String?
  private     Boolean
  userId      String
  user        User @relation(fields: [userId], references: [id])
}

